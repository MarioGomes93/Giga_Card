@{
    ViewData["Title"] = "Seus cartoes";
}

<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GigaCard.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
</head>
<body>

    <div>
        <h1 class="display-5">Faça um novo cartão ou remodele um existente</h1>
        <p>Acesse o suporte em caso de dúvidas.</p>
    </div>

    <div class="Content">
        <div class="row">
            <div class="col-md-8">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="NovoCartao" style=" color: #ff0000; font-weight: bold">Novo Cartão</a>
            </div>
            <div class="col-md-2" style="border: 1px solid; border-radius: 20px; height: 20rem; margin-bottom: 20px">
            </div>

        </div>

    </div>

    <button onclick="downloadPDF()">Download</button>

    <script src="~/js/site.js"></script>

</body>
</html>




